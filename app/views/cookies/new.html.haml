%h3 New Cookie for oven '#{@oven.name}'

= form_for [@oven, @cookie] do |f|
  .row
    .small-8.columns
      = f.label :fillings
  .row
    .small-8.columns
      = f.text_field :fillings

  .row
    .small-8.columns
      = label_tag :amount

  .row
    .small-8.columns
      = number_field_tag 'cookie[amount]', 1

  .row
    .small-8.columns
      = f.submit 'Mix and bake', class: 'button'
